<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_drawerMenu_comp_content"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:padding="@dimen/padding_twenty"
    android:paddingTop="@dimen/padding_eight"
    tools:context=".DrawerMenuComp">

    <Switch
                android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Switch"
        android:id="@+id/fragment_drawerMenu_comp_switch"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:entries="@array/radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_drawerMenu_comp_spinner"
        android:layout_below="@+id/fragment_drawerMenu_comp_switch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" />

    <Spinner
        android:entries="@array/prevention_dB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/fragment_drawerMenu_comp_switch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>