<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:background="@drawable/ins_shape">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1000">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="vertical">
            <!-- 1. Title -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1000">

                <!-- TextView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="900">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="개발자 정보"
                        android:textColor="@android:color/black"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- X Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="100"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60">

                        <ImageButton

                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/btn_x"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignBottom="@+id/btn_ok"
                            android:layout_alignParentRight="true"
                            android:onClick="btn_xOnclicked"
                            android:text="X"
                            android:textColor="@android:color/black"
                            android:background="@drawable/xxx"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35" />
                </LinearLayout>
            </LinearLayout>

            <!-- 2. Line -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="445dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="445dp"
                    android:orientation="vertical">
                    <!-- 3. Image -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="370dp"
                        android:orientation="vertical"
                        android:weightSum="1090">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30" />
                        <!-- Top -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="500"
                            android:orientation="horizontal"
                            android:weightSum="1000">

                            <!-- Left -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="35" />

                            <!-- L-Top Image -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="450">

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/ji" />
                            </LinearLayout>

                            <!-- Center -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="30" />

                            <!-- R-Top Image -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="450">

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/junkyu" />
                            </LinearLayout>
                            <!-- Right -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="35" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30" />
                        <!-- Bottom -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="500"
                            android:orientation="horizontal"
                            android:weightSum="1000">

                            <!-- Left -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="35" />

                            <!-- L-Top Image -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="450">

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/ja" />
                            </LinearLayout>

                            <!-- Center -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="30" />

                            <!-- R-Top Image -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="450">

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/nami" />
                            </LinearLayout>
                            <!-- Right -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="35" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30" />
                    </LinearLayout>
                    <!-- 4. Representative-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|top"
                            android:text="Contact us\n\nE-mail: jimin6407@naver.com"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>