<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".First_instruction">



        <CheckBox
            android:id="@+id/fragment_first_instruction_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:text="다시보지 않기"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/fragment_first_instruction_checkbox"
            android:background="@drawable/btn_shape"

            android:onClick="onCloseBtnClicked"

            android:text="close"
            android:textColor="@color/text_white" />

        <ImageButton
            android:id="@+id/fragment_first_instruction_imageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/backtrans"
            android:onClick="onCloseImgBtnClicked" />

</RelativeLayout>