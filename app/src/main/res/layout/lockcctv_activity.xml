<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".Introduction">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1000">

            <!-- 1. Top -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="120" />

            <!-- 2. Center -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="760"
                android:orientation="horizontal"
                android:weightSum="1000">

                <!-- 1. Left -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="70" />

                <!-- 2. Content Center -->
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="430dp"
                    android:layout_weight="860"
                    android:background="@drawable/ins_shape"
                    android:orientation="vertical"
                    android:weightSum="1000">

                    <!-- 1. Icon / Distacne -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="200"
                        android:orientation="horizontal"
                        android:weightSum="1000">

                        <!-- 1. Left Icon -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="300"
                            android:padding="@dimen/popUp_padding_Img">

                            <!-- Icon -->
                            <ImageView
                                android:id="@+id/iv_cctv"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@drawable/img_transparents" />
                        </LinearLayout>

                        <!-- 2. Right / Distance -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="700"
                            android:padding="5dp">

                            <!-- Distance -->
                            <TextView
                                android:id="@+id/tv_remainderdis"
                                android:text=""
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="40dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- 2. Line -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:background="@color/buttonColor" />

                    <!-- 3. VideoView -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="590"
                        android:gravity="center"
                        android:padding="@dimen/popUp_padding_Video">

                        <VideoView
                            android:id="@+id/vv_cctv"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                    </LinearLayout>

                    <!-- 4. Text -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="80"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <!-- 5. Button -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="120"
                        android:orientation="horizontal"
                        android:weightSum="1000">

                        <!-- 1. Exit -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="400">

                            <Button
                                android:id="@+id/btn_close"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="@dimen/margin_eight"
                                android:background="@drawable/btn_shape"
                                android:onClick="onButtonCloseClicked"
                                android:text="종료"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <!-- Before -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="300">

                            <Button
                                android:id="@+id/btn_before"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="@dimen/margin_eight"
                                android:background="@drawable/btn_shape"
                                android:onClick="onButtonBefClicked"
                                android:text="◁"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/popUp_textSize" />
                            :textColor="@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="300">

                            <Button
                                android:id="@+id/btn_after"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="@dimen/margin_eight"
                                android:background="@drawable/btn_shape"
                                android:onClick="onButtonAftClicked"
                                android:text="▷"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/popUp_textSize" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <!-- 3. Right -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="70" />
            </LinearLayout>

            <!-- 3. Bottom -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="120" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>